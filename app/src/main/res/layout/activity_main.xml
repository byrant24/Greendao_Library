<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:text="Pulse 7 Demo" android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal" android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView  android:textSize="20sp"
        android:layout_height="wrap_content" android:id="@+id/textView2"
        android:text="Date and Time Picker Dialog"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal" android:paddingTop="5dp"
        android:paddingBottom="25dp"/>
    <TextView  android:textSize="20sp"
        android:layout_height="wrap_content" android:id="@+id/textView3"
        android:text="Note" android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal" android:paddingTop="5dp"
        android:paddingBottom="25dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:orientation="horizontal">
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/txtDate">
            <requestFocus/>
        </EditText>
        <Button android:layout_height="wrap_content"
            android:layout_weight="1" android:id="@+id/btnCalendar"
            android:text="Calendar"
            android:layout_width="100dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout2"
        android:orientation="horizontal">
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/txtTime">
            <requestFocus></requestFocus>
        </EditText>
        <Button android:layout_height="wrap_content"
            android:layout_weight="1" android:id="@+id/btnTimePicker"
            android:text="Time Picker" android:layout_width="100dp"/>
    </LinearLayout>
    <Button android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:text="Save"
        android:layout_width="100dp"/>
</LinearLayout>